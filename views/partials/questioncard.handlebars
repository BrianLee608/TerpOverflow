<div class="row">
  <div class="col-sm-2">
    <div class="row question-card-stats">
      <div class="post-meta">
        <b>{{{this.answers.length}}} answers</b>
      </div>

    </div>

  </div>
  <div class="col-sm-10">

    <div class="row">
      <h5><b><a href={{{this.url}}}>{{{this.title}}}</a></b></h5>
    </div>
    <div class="row">
      {{{this.sanitizedDeltaAsHtmlPreview}}}
    </div>
    <div class="row">
      <div class="col-sm-6">
        {{#each this.tags}}
          <span class="question-card-tag">{{{this}}}</span>
        {{/each}}

      </div>
      <div class="col-sm-4 question-card-author">
        asked by {{{this.author.displayName}}}
      </div>
    </div>
  </div>

</div>

<hr id="line-break" />
