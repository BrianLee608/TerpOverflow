<div id="form-container" class="container">
  <div class="col-sm-10 col-lg-8">
    {{#if messages.error}}
      <div role="alert" class="alert alert-danger">
        {{#each messages.error}}
          <div>{{msg}}</div>
        {{/each}}
      </div>
    {{/if}}
    <form id="question-form" method="POST">
      <div class="row">

        <div class="col-xs-8">
          <div class="form-group">
            <label for="questionTitle">Title</label>
            <input class="form-control" name="questionTitle" type="text" placeholder="What is your question? Be specific.">
          </div>
        </div>
      </div>
      <div class="row form-group">
        <label for="questionContent">Question Content</label>
        <input name="questionContent" type="hidden">
        <div id="editor"></div>
      </div>
      <div class="row form-group">
        <label for="tags">Tags (minimum of one tage required)</label>
        <br />
        <select name="tags" class="select2-input" multiple="multiple">
        </select>
      </div>

      <div class="row">
        <button class="btn btn-primary" type="submit">Post Your Question</button>
      </div>
    </form>
  </div>
  <div class="col-sm-4 visible-lg">
    {{>rightpanel}}
  </div>

</div>

<link href="/public/lib/katex/katex.min.css" rel="stylesheet">
<script src="/public/lib/katex/katex.min.js"></script>
<link href="//cdn.quilljs.com/1.2.4/quill.snow.css" rel="stylesheet">
<script src="//cdn.quilljs.com/1.2.4/quill.min.js"></script>
<script src="/public/js/editor.js"></script>
<script src="/public/js/tagscript.js"></script>
